{
  "name": "durable-challenge",
  "version": "1.0.0",
  "main": "index.js",
  "author": "ThankGod Ossaija (Tg) <codebugsolved@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.0",
    "log4js": "^6.4.1",
    "semver": "^7.3.5"
  },
  "scripts": {
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "start": "yarn serve",
    "serve": "node dist/src/app.js",
    "dev": "nodemon dist/src/app.js",
    "watch-node": "nodemon dist/src/app.js",
    "watch-test": "yarn test -- --watchAll ",
    "build": "yarn lint && yarn build-ts && yarn test",
    "lint": "eslint --ignore-path .eslintignore . --ext .ts --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles --testTimeout=10000",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"yarn watch-ts\" \"yarn  watch-node\""
  },
  "engines": {
    "node": "16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn build-ts"
    }
  },
  "lint-staged": {
    "*": "yarn lint"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.4.1",
    "@types/log4js": "^2.3.5",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  }
}
